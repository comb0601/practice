<Window x:Class="Lesson02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lesson 02: Camera Systems Explorer" Height="700" Width="1000"
        Background="#1E1E1E">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- 3D Viewport -->
        <Border Grid.Column="0" Background="Black" Margin="10">
            <Viewport3D x:Name="viewport">

                <!-- CAMERA: This is what we're learning about! -->
                <Viewport3D.Camera>
                    <PerspectiveCamera x:Name="perspectiveCamera"
                                     Position="8,6,12"
                                     LookDirection="-8,-6,-12"
                                     UpDirection="0,1,0"
                                     FieldOfView="60"/>
                </Viewport3D.Camera>

                <!-- Lights -->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <AmbientLight Color="#606060"/>
                            <DirectionalLight Color="White" Direction="-1,-1,-3"/>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <!-- Scene Content -->
                <ModelVisual3D x:Name="sceneModel"/>

            </Viewport3D>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Column="1" Background="#2D2D30" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">

                    <TextBlock Text="CAMERA EXPLORER"
                             Foreground="White"
                             FontSize="16"
                             FontWeight="Bold"
                             Margin="0,0,0,15"/>

                    <!-- Camera Type -->
                    <TextBlock Text="CAMERA TYPE" Foreground="#4EC9B0" FontWeight="Bold" Margin="0,5,0,8"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <RadioButton x:Name="rbPerspective"
                                   Content="Perspective"
                                   Foreground="White"
                                   IsChecked="True"
                                   Checked="CameraType_Changed"
                                   Margin="0,0,15,0"/>
                        <RadioButton x:Name="rbOrthographic"
                                   Content="Orthographic"
                                   Foreground="White"
                                   Checked="CameraType_Changed"/>
                    </StackPanel>

                    <!-- Camera Position -->
                    <TextBlock Text="POSITION" Foreground="#4EC9B0" FontWeight="Bold" Margin="0,10,0,8"/>

                    <TextBlock Text="X (Left/Right):" Foreground="White" FontSize="11" Margin="0,3,0,2"/>
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock x:Name="txtPosX" Text="8.0" Foreground="White" Width="40" DockPanel.Dock="Right" TextAlignment="Right" FontSize="11"/>
                        <Slider x:Name="sliderPosX" Minimum="-15" Maximum="15" Value="8" ValueChanged="CameraPosition_Changed"/>
                    </DockPanel>

                    <TextBlock Text="Y (Up/Down):" Foreground="White" FontSize="11" Margin="0,3,0,2"/>
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock x:Name="txtPosY" Text="6.0" Foreground="White" Width="40" DockPanel.Dock="Right" TextAlignment="Right" FontSize="11"/>
                        <Slider x:Name="sliderPosY" Minimum="-15" Maximum="15" Value="6" ValueChanged="CameraPosition_Changed"/>
                    </DockPanel>

                    <TextBlock Text="Z (Closer/Farther):" Foreground="White" FontSize="11" Margin="0,3,0,2"/>
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock x:Name="txtPosZ" Text="12.0" Foreground="White" Width="40" DockPanel.Dock="Right" TextAlignment="Right" FontSize="11"/>
                        <Slider x:Name="sliderPosZ" Minimum="-15" Maximum="15" Value="12" ValueChanged="CameraPosition_Changed"/>
                    </DockPanel>

                    <!-- FOV / Width -->
                    <TextBlock x:Name="lblFOVWidth" Text="FIELD OF VIEW" Foreground="#4EC9B0" FontWeight="Bold" Margin="0,15,0,8"/>

                    <DockPanel Margin="0,0,0,8">
                        <TextBlock x:Name="txtFOV" Text="60°" Foreground="White" Width="40" DockPanel.Dock="Right" TextAlignment="Right" FontSize="11"/>
                        <Slider x:Name="sliderFOV" Minimum="10" Maximum="120" Value="60" ValueChanged="FOV_Changed"/>
                    </DockPanel>

                    <!-- Preset Views -->
                    <TextBlock Text="PRESET VIEWS" Foreground="#4EC9B0" FontWeight="Bold" Margin="0,15,0,8"/>

                    <UniformGrid Columns="2" Rows="3">
                        <Button Content="Front" Click="PresetFront_Click" Margin="2" Padding="5" Background="#0E639C" Foreground="White" BorderThickness="0"/>
                        <Button Content="Back" Click="PresetBack_Click" Margin="2" Padding="5" Background="#0E639C" Foreground="White" BorderThickness="0"/>
                        <Button Content="Top" Click="PresetTop_Click" Margin="2" Padding="5" Background="#0E639C" Foreground="White" BorderThickness="0"/>
                        <Button Content="Bottom" Click="PresetBottom_Click" Margin="2" Padding="5" Background="#0E639C" Foreground="White" BorderThickness="0"/>
                        <Button Content="Left" Click="PresetLeft_Click" Margin="2" Padding="5" Background="#0E639C" Foreground="White" BorderThickness="0"/>
                        <Button Content="Right" Click="PresetRight_Click" Margin="2" Padding="5" Background="#0E639C" Foreground="White" BorderThickness="0"/>
                    </UniformGrid>

                    <Button Content="Isometric" Click="PresetIso_Click" Margin="2,10,2,2" Padding="8" Background="#4A5F7A" Foreground="White" BorderThickness="0" FontWeight="Bold"/>

                    <!-- Camera Info -->
                    <TextBlock Text="CAMERA INFO" Foreground="#4EC9B0" FontWeight="Bold" Margin="0,20,0,8"/>

                    <Border Background="#1E1E1E" BorderBrush="#555" BorderThickness="1" Padding="8" CornerRadius="3">
                        <StackPanel>
                            <TextBlock x:Name="txtCameraType" Text="Type: Perspective" Foreground="White" FontSize="11" FontFamily="Consolas"/>
                            <TextBlock x:Name="txtCameraPos" Text="Position: (8, 6, 12)" Foreground="White" FontSize="11" FontFamily="Consolas" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtCameraLook" Text="Looking: (-8, -6, -12)" Foreground="White" FontSize="11" FontFamily="Consolas" Margin="0,3,0,0"/>
                            <TextBlock x:Name="txtCameraFOV" Text="FOV: 60°" Foreground="White" FontSize="11" FontFamily="Consolas" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Instructions -->
                    <TextBlock Text="TIP" Foreground="#FFD700" FontWeight="Bold" Margin="0,20,0,5"/>
                    <TextBlock TextWrapping="Wrap" Foreground="#AAA" FontSize="11">
                        Move sliders to change camera position. Try switching between Perspective and Orthographic to see the difference!
                    </TextBlock>

                    <TextBlock Text="Lesson 02"
                             Foreground="#666"
                             FontSize="10"
                             Margin="0,20,0,0"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Info Overlay -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20">
            <Border Background="#AA000000" Padding="8" CornerRadius="3">
                <StackPanel>
                    <TextBlock Text="LESSON 02: Camera Systems" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="Explore how cameras work in 3D!" Foreground="#4EC9B0" FontSize="11" Margin="0,3,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>
</Window>
