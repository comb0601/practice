<Window x:Class="Lesson01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lesson 01: Hello 3D World" Height="600" Width="800"
        Background="Black">

    <!--
    LESSON 01: Your First 3D Scene

    This is your first 3D application in WPF!
    We create a simple red triangle to understand the basics.
    -->

    <Grid>
        <!-- VIEWPORT3D: The window into the 3D world -->
        <Viewport3D x:Name="viewport">

            <!-- CAMERA: Where we're looking from -->
            <Viewport3D.Camera>
                <PerspectiveCamera
                    Position="0,0,5"
                    LookDirection="0,0,-1"
                    UpDirection="0,1,0"
                    FieldOfView="60"/>
                <!--
                Position: Camera is 5 units away on Z axis
                LookDirection: Looking toward negative Z (into screen)
                UpDirection: Y+ is up
                FieldOfView: 60 degrees (like human vision)
                -->
            </Viewport3D.Camera>

            <!-- LIGHTS: Illuminate the scene -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <!-- Ambient light: Soft overall illumination -->
                        <AmbientLight Color="#404040"/>

                        <!-- Directional light: Like sunlight -->
                        <DirectionalLight
                            Color="White"
                            Direction="-1,-1,-3"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!-- 3D MODEL: Our triangle (created in code-behind) -->
            <ModelVisual3D x:Name="triangleModel"/>

        </Viewport3D>

        <!-- INFO OVERLAY -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
            <Border Background="#AA000000" Padding="10" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="LESSON 01: Hello 3D World"
                             Foreground="White"
                             FontWeight="Bold"
                             FontSize="16"/>
                    <TextBlock Text="You're seeing a 3D red triangle!"
                             Foreground="#4EC9B0"
                             Margin="0,5,0,0"/>
                    <TextBlock Text="• 3 vertices define the shape"
                             Foreground="White"
                             FontSize="12"
                             Margin="0,5,0,0"/>
                    <TextBlock Text="• Camera is at Z=5 looking inward"
                             Foreground="White"
                             FontSize="12"/>
                    <TextBlock Text="• Lights make it visible"
                             Foreground="White"
                             FontSize="12"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- INSTRUCTIONS -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">
            <Border Background="#AA000000" Padding="10" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Try This:"
                             Foreground="#FFD700"
                             FontWeight="Bold"/>
                    <TextBlock Text="1. Change camera Position in XAML"
                             Foreground="White"
                             FontSize="11"
                             Margin="0,3,0,0"/>
                    <TextBlock Text="2. Modify vertex positions in C#"
                             Foreground="White"
                             FontSize="11"/>
                    <TextBlock Text="3. Change the color"
                             Foreground="White"
                             FontSize="11"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
