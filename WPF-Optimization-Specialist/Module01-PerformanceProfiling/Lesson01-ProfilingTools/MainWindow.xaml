<Window x:Class="Lesson01_ProfilingTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lesson 1: Profiling Tools Ecosystem" Height="700" Width="1200"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Performance Profiling Tools - Interactive Demo"
                          FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Learn how to use various profiling scenarios and measure performance"
                          FontSize="14" Foreground="#BDC3C7" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Scenario Selector -->
            <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Profiling Scenarios" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="CPU Intensive:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button x:Name="BtnCpuHeavy" Content="CPU Heavy Calculation" Click="BtnCpuHeavy_Click"
                            Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                    <Button x:Name="BtnRecursion" Content="Deep Recursion" Click="BtnRecursion_Click"
                            Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                    <TextBlock Text="Memory Intensive:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Button x:Name="BtnMemoryAllocation" Content="Large Allocations" Click="BtnMemoryAllocation_Click"
                            Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                    <Button x:Name="BtnStringOperations" Content="String Operations" Click="BtnStringOperations_Click"
                            Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                    <TextBlock Text="UI Performance:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Button x:Name="BtnUiBlocking" Content="UI Thread Blocking" Click="BtnUiBlocking_Click"
                            Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                    <Button x:Name="BtnMassiveUi" Content="Massive UI Elements" Click="BtnMassiveUi_Click"
                            Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                    <TextBlock Text="LINQ Performance:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Button x:Name="BtnLinqQuery" Content="Complex LINQ Queries" Click="BtnLinqQuery_Click"
                            Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                    <Separator Margin="0,15"/>

                    <Button x:Name="BtnClearResults" Content="Clear Results" Click="BtnClearResults_Click"
                            Background="#E74C3C" Foreground="White" Padding="10" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Results Area -->
            <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Results & Metrics" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- Performance Metrics -->
                    <Border Grid.Row="1" Background="#ECF0F1" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Execution Time" FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TxtExecutionTime" Text="0 ms" FontSize="20" FontWeight="Bold" Foreground="#2980B9"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Memory Allocated" FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TxtMemoryAllocated" Text="0 KB" FontSize="20" FontWeight="Bold" Foreground="#27AE60"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="GC Collections" FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TxtGcCollections" Text="0" FontSize="20" FontWeight="Bold" Foreground="#E67E22"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Operations/sec" FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TxtOperationsPerSec" Text="0" FontSize="20" FontWeight="Bold" Foreground="#8E44AD"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Output Log -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="TxtOutput" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"
                                  Background="#2C3E50" Foreground="#ECF0F1" Padding="15"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10" CornerRadius="5" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="TxtStatus" Text="Ready" Foreground="White" VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1" x:Name="ProgressBar" Height="20" Margin="20,0" Visibility="Collapsed"/>
                <TextBlock Grid.Column="2" Foreground="#BDC3C7" VerticalAlignment="Center">
                    <Run Text="Tip: Run these scenarios with different profilers (Visual Studio, PerfView, dotTrace)"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>

    <!-- Resources -->
    <Window.Resources>
        <Style x:Key="ScenarioButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="3"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1F6391"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
