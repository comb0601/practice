<Window x:Class="Lesson02_MemoryProfiling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lesson 2: Memory Profiling Deep Dive - Memory Leak Demonstrations" Height="800" Width="1400"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#8E44AD" Padding="20" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Memory Leak Patterns in WPF - Interactive Demonstration"
                          FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Learn to identify and diagnose 10 common memory leak patterns using memory profilers"
                          FontSize="14" Foreground="#ECF0F1" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Scenario Selector -->
            <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Memory Leak Scenarios" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <TextBlock Text="Event-Related Leaks:" FontWeight="Bold" Margin="0,0,0,5" Foreground="#E74C3C"/>
                        <Button x:Name="BtnEventHandlerLeak" Content="1. Event Handler Leak" Click="BtnEventHandlerLeak_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,5"/>
                        <Button x:Name="BtnWeakEventManager" Content="2. WeakEventManager Missing" Click="BtnWeakEventManager_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                        <TextBlock Text="Static Reference Leaks:" FontWeight="Bold" Margin="0,10,0,5" Foreground="#E67E22"/>
                        <Button x:Name="BtnStaticReferenceLeak" Content="3. Static Reference Leak" Click="BtnStaticReferenceLeak_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                        <TextBlock Text="Timer Leaks:" FontWeight="Bold" Margin="0,10,0,5" Foreground="#F39C12"/>
                        <Button x:Name="BtnDispatcherTimerLeak" Content="4. DispatcherTimer Leak" Click="BtnDispatcherTimerLeak_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,5"/>
                        <Button x:Name="BtnDispatcherOperationLeak" Content="5. DispatcherOperation Leak" Click="BtnDispatcherOperationLeak_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                        <TextBlock Text="Visual Tree Leaks:" FontWeight="Bold" Margin="0,10,0,5" Foreground="#27AE60"/>
                        <Button x:Name="BtnVisualTreeLeak" Content="6. Visual Tree Reference Leak" Click="BtnVisualTreeLeak_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                        <TextBlock Text="Binding Leaks:" FontWeight="Bold" Margin="0,10,0,5" Foreground="#3498DB"/>
                        <Button x:Name="BtnBindingLeak" Content="7. Binding Memory Leak" Click="BtnBindingLeak_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,5"/>
                        <Button x:Name="BtnCommandBindingLeak" Content="8. Command Binding Leak" Click="BtnCommandBindingLeak_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                        <TextBlock Text="Resource Leaks:" FontWeight="Bold" Margin="0,10,0,5" Foreground="#9B59B6"/>
                        <Button x:Name="BtnResourceDictionaryLeak" Content="9. ResourceDictionary Leak" Click="BtnResourceDictionaryLeak_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                        <TextBlock Text="IDisposable Leaks:" FontWeight="Bold" Margin="0,10,0,5" Foreground="#E91E63"/>
                        <Button x:Name="BtnDisposableLeak" Content="10. IDisposable Not Called" Click="BtnDisposableLeak_Click"
                                Style="{StaticResource ScenarioButtonStyle}" Margin="0,0,0,10"/>

                        <Separator Margin="0,15"/>

                        <TextBlock Text="Actions:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Button x:Name="BtnForceGC" Content="Force Garbage Collection" Click="BtnForceGC_Click"
                                Background="#16A085" Foreground="White" Padding="10" Margin="0,0,0,5"/>
                        <Button x:Name="BtnCleanupLeaks" Content="Cleanup All Leaks" Click="BtnCleanupLeaks_Click"
                                Background="#27AE60" Foreground="White" Padding="10" Margin="0,0,0,5"/>
                        <Button x:Name="BtnClearResults" Content="Clear Results" Click="BtnClearResults_Click"
                                Background="#E74C3C" Foreground="White" Padding="10" Margin="0,0,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Results Area -->
            <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Memory Analysis & Leak Detection" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- Memory Metrics -->
                    <Border Grid.Row="1" Background="#ECF0F1" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Memory" FontSize="11" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TxtTotalMemory" Text="0 MB" FontSize="18" FontWeight="Bold" Foreground="#E74C3C"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Gen 0 Collections" FontSize="11" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TxtGen0" Text="0" FontSize="18" FontWeight="Bold" Foreground="#F39C12"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Gen 1 Collections" FontSize="11" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TxtGen1" Text="0" FontSize="18" FontWeight="Bold" Foreground="#E67E22"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Gen 2 Collections" FontSize="11" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TxtGen2" Text="0" FontSize="18" FontWeight="Bold" Foreground="#C0392B"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Leaked Objects" FontSize="11" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TxtLeakedObjects" Text="0" FontSize="18" FontWeight="Bold" Foreground="#8E44AD"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Output Log -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="TxtOutput" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"
                                  Background="#2C3E50" Foreground="#ECF0F1" Padding="15"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10" CornerRadius="5" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="TxtStatus" Text="Ready - Select a leak scenario to demonstrate" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Foreground="#BDC3C7" VerticalAlignment="Center" TextAlignment="Right">
                    <Run Text="Use Memory Profiler (Visual Studio, dotMemory, or PerfView) to track these leaks"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>

    <!-- Resources -->
    <Window.Resources>
        <Style x:Key="ScenarioButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#8E44AD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="3"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9B59B6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6C3483"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
