<Window x:Class="GPUAcceleration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GPU Acceleration - Hardware Acceleration and Custom Shaders"
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Shader Effects -->
        <BlurEffect x:Key="BlurEffect" Radius="10"/>
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="Black"
                          BlurRadius="15"
                          ShadowDepth="5"
                          Opacity="0.5"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <GroupBox Grid.Row="0" Header="GPU Acceleration Demonstrations">
            <StackPanel>
                <WrapPanel>
                    <Button x:Name="BtnGPUInfo" Content="GPU Information" Click="BtnGPUInfo_Click"/>
                    <Button x:Name="BtnHWAcceleration" Content="HW Acceleration" Click="BtnHWAcceleration_Click"/>
                    <Button x:Name="BtnShaderEffects" Content="Shader Effects" Click="BtnShaderEffects_Click"/>
                    <Button x:Name="BtnBlurEffect" Content="Blur Effect" Click="BtnBlurEffect_Click"/>
                    <Button x:Name="BtnDropShadow" Content="Drop Shadow" Click="BtnDropShadow_Click"/>
                    <Button x:Name="Btn3DTransforms" Content="3D Transforms" Click="Btn3DTransforms_Click"/>
                    <Button x:Name="BtnPerformanceTest" Content="Performance Test" Click="BtnPerformanceTest_Click"/>
                    <Button x:Name="BtnClearDemo" Content="Clear" Click="BtnClearDemo_Click"/>
                </WrapPanel>
                <TextBlock x:Name="TxtInstructions" TextWrapping="Wrap" FontWeight="Bold" Foreground="DarkBlue">
                    Explore GPU-accelerated features including shader effects, 3D transformations, and hardware rendering capabilities.
                </TextBlock>
            </StackPanel>
        </GroupBox>

        <!-- Demo Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Visualization -->
            <GroupBox Grid.Column="0" Header="GPU Acceleration Visualization">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Border x:Name="VisualizationContainer"
                            BorderBrush="LightGray"
                            BorderThickness="1"
                            Background="White"
                            MinHeight="600">
                    </Border>
                </ScrollViewer>
            </GroupBox>

            <!-- Right Panel: Information -->
            <GroupBox Grid.Column="1" Header="GPU Information & Statistics">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <GroupBox Header="Hardware Capabilities">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Render Tier:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtRenderTier" Text="-" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="GPU Accelerated:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtGPUAccelerated" Text="-" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Max Texture Size:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtMaxTextureSize" Text="-" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Pixel Shader Ver:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtPixelShader" Text="-" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Video Memory:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TxtVideoMemory" Text="-" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="DirectX Version:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TxtDirectXVersion" Text="-" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Effects Supported:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="TxtEffectsSupported" Text="-" Margin="10,0,0,0"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Performance Metrics">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="FPS:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtFPS" Text="0" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Frame Time:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtFrameTime" Text="0 ms" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Render Calls:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtRenderCalls" Text="0" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="GPU Usage:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtGPUUsage" Text="Active" Margin="10,0,0,0"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Elements:" FontWeight="Bold"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TxtElements" Text="0" Margin="10,0,0,0"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="GPU Features">
                            <TextBlock x:Name="TxtGPUFeatures"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       Background="WhiteSmoke"
                                       Padding="10"/>
                        </GroupBox>

                        <GroupBox Header="Optimization Tips">
                            <TextBlock TextWrapping="Wrap" Padding="5">
                                <Bold>GPU Optimization:</Bold><LineBreak/>
                                • Use hardware acceleration when available<LineBreak/>
                                • Leverage shader effects for visuals<LineBreak/>
                                • Prefer transforms over layout changes<LineBreak/>
                                • Use 3D for complex transformations<LineBreak/>
                                • Cache rendered content when possible<LineBreak/>
                                • Minimize texture size<LineBreak/>
                                • Batch rendering operations<LineBreak/>
                                • Test on target hardware
                            </TextBlock>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="TxtStatus" Text="Ready - Select a demonstration to explore GPU acceleration features"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
