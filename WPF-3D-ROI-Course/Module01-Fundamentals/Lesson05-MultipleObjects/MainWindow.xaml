<Window x:Class="Lesson05_MultipleObjects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lesson 1.5 - Multiple Objects" Height="700" Width="1000"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel>
                <TextBlock Text="Lesson 1.5: Multiple Objects and Scene Management"
                          FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="3D Chess Board with Model3DGroup and hierarchy"
                          FontSize="12" Foreground="#A0A0A0" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#3E3E42" BorderThickness="1">
                <Viewport3D x:Name="mainViewport">
                    <Viewport3D.Camera>
                        <PerspectiveCamera x:Name="camera" Position="6,8,6" LookDirection="-6,-8,-6"
                                         UpDirection="0,1,0" FieldOfView="60"/>
                    </Viewport3D.Camera>

                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <AmbientLight Color="#505050"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>
                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>

                    <!-- Chess Board and Pieces will be added programmatically -->
                    <ModelVisual3D x:Name="sceneRoot"/>

                </Viewport3D>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" Background="#3E3E42"/>

            <Border Grid.Column="2" Background="#252526" Padding="10">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Scene Hierarchy" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <TreeView x:Name="sceneTree" Background="#2D2D30" Foreground="White" Height="300"
                                 BorderBrush="#3E3E42" Padding="5"/>

                        <TextBlock Text="Camera Control" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,20,0,10"/>

                        <Button Content="Top View" Click="TopView_Click" Padding="8,4" Margin="0,5"/>
                        <Button Content="Side View" Click="SideView_Click" Padding="8,4" Margin="0,5"/>
                        <Button Content="Isometric View" Click="IsoView_Click" Padding="8,4" Margin="0,5"/>

                        <TextBlock Text="Scene Options" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,20,0,10"/>

                        <CheckBox x:Name="chkShowBoard" Content="Show Board" IsChecked="True"
                                 Foreground="White" Checked="Toggle_Changed" Unchecked="Toggle_Changed"/>
                        <CheckBox x:Name="chkShowPieces" Content="Show Pieces" IsChecked="True"
                                 Foreground="White" Margin="0,5" Checked="Toggle_Changed" Unchecked="Toggle_Changed"/>

                        <TextBlock Text="Statistics" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,20,0,10"/>
                        <TextBlock x:Name="txtStats" Foreground="#A0A0A0" TextWrapping="Wrap"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#2D2D30" Padding="10">
            <TextBlock Foreground="#A0A0A0">
                <Run Text="Objects in Scene: "/><Run x:Name="txtObjectCount" Text="0" Foreground="#4EC9B0"/>
            </TextBlock>
        </Border>
    </Grid>
</Window>
