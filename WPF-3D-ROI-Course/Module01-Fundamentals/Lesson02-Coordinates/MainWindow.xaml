<Window x:Class="Lesson02_Coordinates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Lesson02_Coordinates"
        Title="Lesson 1.2 - Understanding 3D Coordinates" Height="700" Width="1000"
        Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel>
                <TextBlock Text="Lesson 1.2: Understanding 3D Coordinates"
                          FontSize="20" FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock Text="Interactive coordinate system visualization with axis helpers"
                          FontSize="12" Foreground="#A0A0A0"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 3D Viewport -->
            <Border Grid.Column="0" BorderBrush="#3E3E42" BorderThickness="1">
                <Viewport3D x:Name="mainViewport">

                    <!-- Camera -->
                    <Viewport3D.Camera>
                        <PerspectiveCamera x:Name="camera"
                                         Position="5,4,8"
                                         LookDirection="-5,-4,-8"
                                         UpDirection="0,1,0"
                                         FieldOfView="60"/>
                    </Viewport3D.Camera>

                    <!-- Ambient Light for base illumination -->
                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <AmbientLight Color="#404040"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>

                    <!-- Directional Light -->
                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>

                    <!-- Coordinate System Axes will be added via code-behind -->
                    <ModelVisual3D x:Name="coordinateAxes"/>

                    <!-- Grid Plane (XZ plane at Y=0) -->
                    <ModelVisual3D x:Name="gridPlane"/>

                    <!-- Test Point that can be moved -->
                    <ModelVisual3D x:Name="testPoint"/>

                </Viewport3D>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" Background="#3E3E42"
                         HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Control Panel -->
            <Border Grid.Column="2" Background="#252526" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Test Point Position"
                                  FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <!-- X Position -->
                        <TextBlock Text="X Position (Left ← → Right)" Foreground="#A0A0A0" Margin="0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="sliderX" Minimum="-5" Maximum="5" Value="0"
                                   TickFrequency="0.5" IsSnapToTickEnabled="True"
                                   ValueChanged="PositionSlider_ValueChanged"/>
                            <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=sliderX, StringFormat='{}{0:F1}'}"
                                      Foreground="#4EC9B0" Width="40" Margin="5,0,0,0" TextAlignment="Right"/>
                        </Grid>

                        <!-- Y Position -->
                        <TextBlock Text="Y Position (Down ← → Up)" Foreground="#A0A0A0" Margin="0,15,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="sliderY" Minimum="-5" Maximum="5" Value="0"
                                   TickFrequency="0.5" IsSnapToTickEnabled="True"
                                   ValueChanged="PositionSlider_ValueChanged"/>
                            <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=sliderY, StringFormat='{}{0:F1}'}"
                                      Foreground="#4EC9B0" Width="40" Margin="5,0,0,0" TextAlignment="Right"/>
                        </Grid>

                        <!-- Z Position -->
                        <TextBlock Text="Z Position (In ← → Out)" Foreground="#A0A0A0" Margin="0,15,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="sliderZ" Minimum="-5" Maximum="5" Value="0"
                                   TickFrequency="0.5" IsSnapToTickEnabled="True"
                                   ValueChanged="PositionSlider_ValueChanged"/>
                            <TextBlock Grid.Column="1" Text="{Binding Value, ElementName=sliderZ, StringFormat='{}{0:F1}'}"
                                      Foreground="#4EC9B0" Width="40" Margin="5,0,0,0" TextAlignment="Right"/>
                        </Grid>

                        <Separator Margin="0,20" Background="#3E3E42"/>

                        <!-- Display Options -->
                        <TextBlock Text="Display Options"
                                  FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <CheckBox x:Name="chkShowGrid" Content="Show Grid Plane"
                                 Foreground="White" IsChecked="True"
                                 Checked="DisplayOption_Changed" Unchecked="DisplayOption_Changed"
                                 Margin="0,5"/>

                        <CheckBox x:Name="chkShowAxes" Content="Show Coordinate Axes"
                                 Foreground="White" IsChecked="True"
                                 Checked="DisplayOption_Changed" Unchecked="DisplayOption_Changed"
                                 Margin="0,5"/>

                        <Separator Margin="0,20" Background="#3E3E42"/>

                        <!-- Information -->
                        <TextBlock Text="Coordinate System Info"
                                  FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <Border Background="#2D2D30" Padding="10" Margin="0,5">
                            <StackPanel>
                                <TextBlock Foreground="#569CD6" FontWeight="Bold" Text="X-Axis (Red)"/>
                                <TextBlock Foreground="#A0A0A0" TextWrapping="Wrap"
                                          Text="Left (-) to Right (+)"/>

                                <TextBlock Foreground="#6A9955" FontWeight="Bold" Text="Y-Axis (Green)" Margin="0,10,0,0"/>
                                <TextBlock Foreground="#A0A0A0" TextWrapping="Wrap"
                                          Text="Down (-) to Up (+)"/>

                                <TextBlock Foreground="#DCDCAA" FontWeight="Bold" Text="Z-Axis (Blue)" Margin="0,10,0,0"/>
                                <TextBlock Foreground="#A0A0A0" TextWrapping="Wrap"
                                          Text="Into screen (-) to Out (+)"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Right-Handed System" Foreground="#4EC9B0"
                                  Margin="0,10" FontStyle="Italic" TextWrapping="Wrap"
                                  Text="WPF uses a right-handed coordinate system. Point your right thumb along +X, index finger along +Y, and middle finger shows +Z direction."/>

                        <Button Content="Reset Position" Click="Reset_Click"
                               Padding="10,5" Margin="0,20,0,0"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Test Point: (" Foreground="White"/>
                    <TextBlock x:Name="txtX" Text="0.0" Foreground="#569CD6"/>
                    <TextBlock Text=", " Foreground="White"/>
                    <TextBlock x:Name="txtY" Text="0.0" Foreground="#6A9955"/>
                    <TextBlock Text=", " Foreground="White"/>
                    <TextBlock x:Name="txtZ" Text="0.0" Foreground="#DCDCAA"/>
                    <TextBlock Text=")" Foreground="White"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="Use sliders to move the sphere"
                          Foreground="#A0A0A0" FontStyle="Italic"/>
            </Grid>
        </Border>

    </Grid>

</Window>
