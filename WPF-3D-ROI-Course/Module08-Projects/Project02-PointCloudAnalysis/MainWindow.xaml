            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- TODO: Implement Point Cloud Analysis UI -->
            <TextBlock Text="Empty Project - To be implemented"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Foreground="Gray"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="White"/>
        </Border>
    </Grid>
</Window>
