<Window x:Class="Lesson03_Texturing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lesson 2.3 - Texturing 3D Models" Height="700" Width="1100"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel>
                <TextBlock Text="Lesson 2.3: Texturing 3D Models"
                          FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Apply textures and UV coordinates to 3D objects"
                          FontSize="12" Foreground="#A0A0A0" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#3E3E42" BorderThickness="1">
                <Viewport3D x:Name="mainViewport">
                    <Viewport3D.Camera>
                        <PerspectiveCamera Position="0,0,5" LookDirection="0,0,-5"
                                         UpDirection="0,1,0" FieldOfView="60"/>
                    </Viewport3D.Camera>

                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>

                    <ModelVisual3D x:Name="texturedModel">
                        <ModelVisual3D.Transform>
                            <RotateTransform3D>
                                <RotateTransform3D.Rotation>
                                    <AxisAngleRotation3D x:Name="rotation" Axis="0,1,0" Angle="0"/>
                                </RotateTransform3D.Rotation>
                            </RotateTransform3D>
                        </ModelVisual3D.Transform>
                    </ModelVisual3D>

                </Viewport3D>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" Background="#3E3E42"/>

            <Border Grid.Column="2" Background="#252526" Padding="10">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Texture Patterns" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <Button Content="Checkerboard" Click="Checkerboard_Click" Padding="10,5" Margin="0,3"/>
                        <Button Content="Grid" Click="Grid_Click" Padding="10,5" Margin="0,3"/>
                        <Button Content="Gradient" Click="Gradient_Click" Padding="10,5" Margin="0,3"/>
                        <Button Content="Radial" Click="Radial_Click" Padding="10,5" Margin="0,3"/>
                        <Button Content="Multi-Color" Click="MultiColor_Click" Padding="10,5" Margin="0,3"/>

                        <Separator Margin="0,15" Background="#3E3E42"/>

                        <TextBlock Text="Texture Mapping" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <Button Content="Box (6 faces)" Click="TexturedBox_Click" Padding="10,5" Margin="0,3"/>
                        <Button Content="Cylinder" Click="TexturedCylinder_Click" Padding="10,5" Margin="0,3"/>
                        <Button Content="Sphere" Click="TexturedSphere_Click" Padding="10,5" Margin="0,3"/>

                        <Separator Margin="0,15" Background="#3E3E42"/>

                        <CheckBox x:Name="chkAutoRotate" Content="Auto Rotate" IsChecked="True"
                                 Foreground="White" Checked="AutoRotate_Changed" Unchecked="AutoRotate_Changed" Margin="0,5"/>

                        <Separator Margin="0,15" Background="#3E3E42"/>

                        <TextBlock Text="UV Coordinate Info" FontSize="14" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <Border Background="#2D2D30" Padding="10">
                            <TextBlock TextWrapping="Wrap" Foreground="#A0A0A0">
                                UV coordinates map 2D textures onto 3D surfaces.
                                <LineBreak/><LineBreak/>
                                U (horizontal): 0.0 to 1.0<LineBreak/>
                                V (vertical): 0.0 to 1.0<LineBreak/>
                                <LineBreak/>
                                (0,0) = bottom-left<LineBreak/>
                                (1,1) = top-right
                            </TextBlock>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>

        <Border Grid.Row="2" Background="#2D2D30" Padding="10">
            <TextBlock Foreground="#A0A0A0" Text="Select texture patterns and objects to see UV mapping in action"/>
        </Border>
    </Grid>

    <Window.Resources>
        <Storyboard x:Key="RotationStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="rotation"
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360" Duration="0:0:6"/>
        </Storyboard>
    </Window.Resources>
</Window>
