<Window x:Class="Lesson01_MeshGeometry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lesson 2.1 - Mesh Geometry Deep Dive" Height="750" Width="1200"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel>
                <TextBlock Text="Lesson 2.1: Mesh Geometry Deep Dive"
                          FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Understanding MeshGeometry3D - Positions, Triangles, Normals, and Texture Coordinates"
                          FontSize="12" Foreground="#A0A0A0" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#3E3E42" BorderThickness="1">
                <Viewport3D x:Name="mainViewport">
                    <Viewport3D.Camera>
                        <PerspectiveCamera Position="0,2,6" LookDirection="0,-2,-6"
                                         UpDirection="0,1,0" FieldOfView="60"/>
                    </Viewport3D.Camera>

                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <AmbientLight Color="#404040"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>
                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>

                    <ModelVisual3D x:Name="customMesh"/>
                    <ModelVisual3D x:Name="vertexMarkers"/>
                    <ModelVisual3D x:Name="normalVectors"/>

                </Viewport3D>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" Background="#3E3E42"/>

            <Border Grid.Column="2" Background="#252526" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Mesh Examples" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <Button Content="Triangle" Click="CreateTriangle_Click" Padding="8,4" Margin="0,2"/>
                        <Button Content="Quad" Click="CreateQuad_Click" Padding="8,4" Margin="0,2"/>
                        <Button Content="Pyramid" Click="CreatePyramid_Click" Padding="8,4" Margin="0,2"/>
                        <Button Content="Custom Shape" Click="CreateCustom_Click" Padding="8,4" Margin="0,2"/>

                        <Separator Margin="0,15" Background="#3E3E42"/>

                        <TextBlock Text="Visualization" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <CheckBox x:Name="chkShowVertices" Content="Show Vertices" IsChecked="True"
                                 Foreground="White" Checked="Visualization_Changed" Unchecked="Visualization_Changed"/>
                        <CheckBox x:Name="chkShowNormals" Content="Show Normals" IsChecked="False"
                                 Foreground="White" Margin="0,5" Checked="Visualization_Changed" Unchecked="Visualization_Changed"/>
                        <CheckBox x:Name="chkShowWireframe" Content="Wireframe Mode" IsChecked="False"
                                 Foreground="White" Margin="0,5" Checked="Visualization_Changed" Unchecked="Visualization_Changed"/>

                        <Separator Margin="0,15" Background="#3E3E42"/>

                        <TextBlock Text="Mesh Information" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <Border Background="#2D2D30" Padding="10" Margin="0,5">
                            <StackPanel>
                                <TextBlock Foreground="#A0A0A0">
                                    <Run Text="Vertices: "/><Run x:Name="txtVertexCount" Text="0" Foreground="#4EC9B0"/>
                                </TextBlock>
                                <TextBlock Foreground="#A0A0A0" Margin="0,3">
                                    <Run Text="Triangles: "/><Run x:Name="txtTriangleCount" Text="0" Foreground="#4EC9B0"/>
                                </TextBlock>
                                <TextBlock Foreground="#A0A0A0" Margin="0,3">
                                    <Run Text="Has Normals: "/><Run x:Name="txtHasNormals" Text="No" Foreground="#4EC9B0"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Separator Margin="0,15" Background="#3E3E42"/>

                        <TextBlock Text="Mesh Data" FontSize="16" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,10"/>

                        <TextBlock Text="Positions:" Foreground="#A0A0A0" Margin="0,5"/>
                        <TextBox x:Name="txtPositions" Height="100" Background="#2D2D30"
                                Foreground="#4EC9B0" IsReadOnly="True" TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="10"/>

                        <TextBlock Text="Triangle Indices:" Foreground="#A0A0A0" Margin="0,10,0,5"/>
                        <TextBox x:Name="txtIndices" Height="80" Background="#2D2D30"
                                Foreground="#4EC9B0" IsReadOnly="True" TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="10"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>

        <Border Grid.Row="2" Background="#2D2D30" Padding="10">
            <TextBlock Foreground="#A0A0A0" Text="Click buttons to create different mesh geometries. Enable 'Show Vertices' to see vertex positions."/>
        </Border>
    </Grid>
</Window>
