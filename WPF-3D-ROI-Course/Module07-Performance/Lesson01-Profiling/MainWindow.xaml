<Window x:Class="Lesson01_Profiling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lesson 7.1 - Performance Profiling" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <StackPanel>
                <TextBlock Text="Lesson 7.1: Performance Profiling" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Measure and analyze 3D rendering performance" FontSize="14" Foreground="#ECF0F1" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- TODO: Implement Performance Profiling UI -->
            <TextBlock Text="Empty Lesson - To be implemented"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Foreground="Gray"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="White"/>
        </Border>
    </Grid>
</Window>
