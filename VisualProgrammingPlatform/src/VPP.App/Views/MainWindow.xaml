<Window x:Class="VPP.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helix="http://helix-toolkit.org/wpf"
        xmlns:vm="clr-namespace:VPP.App.ViewModels"
        xmlns:conv="clr-namespace:VPP.App.Converters"
        mc:Ignorable="d"
        Title="Visual Programming Platform - Point Cloud Inspection"
        Height="800" Width="1400"
        Background="#1E1E1E"
        WindowState="Maximized">

    <Window.Resources>
        <conv:BoolToBorderConverter x:Key="BoolToBorderConverter"/>
        <conv:PassFailConverter x:Key="PassFailConverter"/>

        <!-- Node Style -->
        <Style x:Key="NodeStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Create Workflow" Command="{Binding CreateDefaultWorkflowCommand}"
                        Background="#2196F3" Foreground="White" Padding="12,8" Margin="0,0,10,0"/>
                <Button Content="Load Point Cloud" Command="{Binding LoadPointCloudCommand}"
                        Background="#2196F3" Foreground="White" Padding="12,8" Margin="0,0,10,0"/>
                <Button Content="Execute" Command="{Binding ExecuteGraphCommand}"
                        Background="#FF9800" Foreground="White" Padding="12,8" Margin="0,0,20,0"/>

                <ComboBox ItemsSource="{Binding AvailableNodes}"
                          SelectedItem="{Binding SelectedNodeType}"
                          Width="200" Margin="0,0,10,0"/>
                <Button Content="Add Node" Command="{Binding AddNodeCommand}"
                        Background="#2196F3" Foreground="White" Padding="12,8"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Node Editor -->
            <Border Grid.Column="0" Background="#1A1A1A" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Node Graph Editor" FontSize="14" FontWeight="Bold"
                               Foreground="White" Padding="10"/>

                    <!-- Node Canvas -->
                    <Canvas Grid.Row="1" x:Name="NodeCanvas" Background="#252525" ClipToBounds="True">
                        <ItemsControl ItemsSource="{Binding Nodes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource NodeStyle}"
                                            BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToBorderConverter}}">
                                        <StackPanel>
                                            <!-- Node Header -->
                                            <Border Background="#2196F3"
                                                    CornerRadius="6,6,0,0" Padding="10,6">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                           Foreground="White"/>
                                            </Border>

                                            <!-- Ports -->
                                            <Grid Margin="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Inputs -->
                                                <ItemsControl Grid.Column="0" ItemsSource="{Binding InputPorts}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                                <Ellipse Width="10" Height="10" Fill="#888"/>
                                                                <TextBlock Text="{Binding Name}"
                                                                           Foreground="White"
                                                                           FontSize="10" Margin="4,0,0,0"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!-- Outputs -->
                                                <ItemsControl Grid.Column="1" ItemsSource="{Binding OutputPorts}"
                                                              HorizontalAlignment="Right">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" Margin="0,2"
                                                                        HorizontalAlignment="Right">
                                                                <TextBlock Text="{Binding Name}"
                                                                           Foreground="White"
                                                                           FontSize="10" Margin="0,0,4,0"/>
                                                                <Ellipse Width="10" Height="10" Fill="#888"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#333"/>

            <!-- 3D Visualization -->
            <Border Grid.Column="2" Background="#1A1A1A" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="3D Point Cloud Visualization" FontSize="14" FontWeight="Bold"
                               Foreground="White" Padding="10"/>

                    <!-- HelixToolkit Viewport -->
                    <helix:HelixViewport3D Grid.Row="1" x:Name="Viewport3D"
                                           Background="#1A1A1A"
                                           ShowCoordinateSystem="True"
                                           ZoomExtentsWhenLoaded="True">
                        <helix:DefaultLights/>

                        <!-- Point Cloud Visualization -->
                        <helix:PointsVisual3D Points="{Binding PointCloudPoints}"
                                               Color="LightBlue" Size="2"/>

                        <!-- Ground Grid -->
                        <helix:GridLinesVisual3D Width="200" Length="200"
                                                  MajorDistance="10" MinorDistance="5"
                                                  Thickness="0.5"/>
                    </helix:HelixViewport3D>

                    <!-- Inspection Result Panel -->
                    <Border Grid.Row="2" Padding="10"
                            Background="{Binding InspectionPass, Converter={StaticResource PassFailConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding InspectionResult}"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="White" TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Detected Radius: " Foreground="White"/>
                                <TextBlock Text="{Binding DetectedRadius, StringFormat=F3}"
                                           Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2D2D2D" Padding="10,5">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White"/>
        </Border>
    </Grid>
</Window>
